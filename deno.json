{
  "name": "@minecraft-server/management-protocol",
  "version": "0.1.0",
  "license": "LICENSE",
  "exports": {
    ".": "./src/index.ts",
    "./definitions": "./src/definitions/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "tasks": {
    "lint": {
      "description": "Run the linting tool.",
      "command": "deno lint"
    },
    "test:unit": {
      "description": "Run the unit test suite.",
      "command": "deno test -A --check --permit-no-files --reload --doc --junit-path=\"./reports/report.xml\""
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "deno.worker",
      "decorators",
      "esnext"
    ]
  },
  "test": {
    "include": [
      "./src/**/*.test.ts"
    ]
  },
  "lint": {
    "plugins": [
      "jsr:@loat-dev/lint-plugins@0.3.12/imports",
      "jsr:@loat-dev/lint-plugins@0.3.12/arrays"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": true,
    "trailingCommas": "never",
    "lineWidth": 120,
    "typeLiteral.separatorKind": "comma",
    "useBraces": "always"
  },
  "imports": { }
}
